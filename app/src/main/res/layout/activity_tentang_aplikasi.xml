<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".TentangAplikasi"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo_gereja250"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi Gereja Yesus v.2.0.1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created by Teddy August"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini adalah referensi bagaimana digitaliasi informasi pelayanan Gereja di era 4.0 yang memadukan Website Portal Berita yang selalu update, Sosial Media, Chatbot, Aplikasi Android dll."
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textAlignment="center"
            android:textColor="@color/gereja_orange"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apabila Gereja Anda ingin mengembangkan Digitalisasi Informasi Terintegrasi, silakan hubungi kami."
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textAlignment="center"
            android:textColor="@color/gereja_orange"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email : yuk.simakinfo@gmail.com"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:text="Disclaimer : Semua konten dalam aplikasi dan website hanya sebagai contoh dalam pengerjaan Aplikasi ini."
            android:textAlignment="center"
            android:textColor="@color/gereja_merah"
            android:textSize="15sp"
            android:textStyle="normal" />




    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>